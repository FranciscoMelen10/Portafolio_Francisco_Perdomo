---
import prinJSON from "../../JSON/principal.json";
---

<div class="swiper mySwiper">
  <div class="swiper-wrapper">
    {
      prinJSON.cursos.map((info) => {
        return (
          <div class="swiper-slide">
            <picture>
              <img src={info.img} alt={`${info.title} Image`} />
            </picture>
            <p class="title">{info.title} </p>
            <p class="tipo">{info.tipo}</p>
            <p class="date">{info.date}</p>
          </div>
        );
      })
    }
  </div>
  <section class="swiper-pagination"></section>
</div>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"
></script>
<script src="/src/JS/crs_cursos.js">

</script>

<style>
  aside {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
  }

  .swiper {
    height: 100%;
    width: 100%;
    background-color: #fff;
    padding: 10px;
  }

  .swiper-wrapper {
    padding: 50px 0px;
  }

  .swiper-slide {
    width: 300px;
    height: 250px;
    text-align: center;
    font-size: 18px;
    background: #fff;
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    flex-direction: column;
    border-radius: 10px;
    box-shadow: 0px 4px 8px 0px rgba(0, 0, 0, 0.25);
    padding: 10px;
  }

  .swiper-slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .title {
    font-size: 25px;
    font-family: "Koulen", sans-serif;
    color: rgba(36, 67, 122, 0.97);
  }

  .tipo {
    color: #24437a;
    text-align: center;
    font-family: "Krona One";
    font-size: 10px;
    font-weight: 400;
    border-radius: 100px;
    background: #fff730;
    width: fit-content;
    padding: 5px;
  }

  .date {
    color: #24437a;
    text-align: center;
    font-family: "Koulen";
    font-size: 20px;
    font-style: normal;
    font-weight: 400;
    line-height: 36px; /* 180% */
  }

  @media screen and (min-width: 3100px) {
    .swiper-wrapper {
      display: flex;
      justify-content: center;
    }
  }
</style>
