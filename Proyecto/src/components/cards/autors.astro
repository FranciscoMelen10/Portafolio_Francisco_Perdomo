<style>
  div {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
  }
  section {
    margin: 50px;
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    max-width: 1290px;
  }

  h1 {
    color: #24437a;
    font-family: "Koulen";
    font-size: 60px;
    font-style: normal;
    font-weight: 400;
    line-height: 55px;
    user-select: none;
  }

  h4 {
    color: #24437a;
    font-family: "Koulen";
    font-size: 24px;
    border-bottom: 5px solid yellow;
    margin-bottom: 15px;
    width: fit-content;
    user-select: none;
  }

  p {
    color: #24437a;
    font-family: "Inter";
    font-size: 20px;
    font-style: normal;
    font-weight: 400;
    line-height: 36px;
    user-select: none;
  }

  .profile {
    height: 500px;
    width: 500px;
  }

  aside {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: space-between;
    height: 500px;
    width: 50%;
  }

  /* Card de redes sociales */

  .card {
    margin: 10px 0;
    width: auto;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 20px;
  }

  /* for all social containers*/
  .socialContainer {
    width: 45px;
    height: 45px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    transition-duration: 0.3s;
    background-color: #24437a;
    border-radius: 10px;
  }
  /* instagram*/
  .containerOne:hover {
    background-color: #d62976;
    transition-duration: 0.3s;
  }
  /* twitter*/
  .containerTwo:hover {
    background-color: #00acee;
    transition-duration: 0.3s;
  }
  /* linkdin*/
  .containerThree:hover {
    background-color: #8101ac;
    transition-duration: 0.3s;
  }
  /* Whatsapp*/
  .containerFour:hover {
    background-color: #0072b1;
    transition-duration: 0.3s;
  }

  .socialContainer:active {
    transform: scale(0.9);
    transition-duration: 0.3s;
  }

  .socialSvg {
    width: 2rem;
  }

  .socialSvg path {
    fill: rgb(255, 255, 255);
  }

  .socialContainer:hover .socialSvg {
    animation: slide-in-top 0.3s both;
  }

  @keyframes slide-in-top {
    0% {
      transform: translateY(-50px);
      opacity: 0;
    }

    100% {
      transform: translateY(0);
      opacity: 1;
    }
  }

  @media screen and (max-width: 1200px) {
    .socialContainer {
      width: 35px;
      height: 35px;
      padding: 5px;
    }

    aside {
      width: 100%;
      height: 400px;
      margin-left: 18px;
    }

    p {
      font-size: 15px;
    }

    .profile {
      width: 400px;
      height: 400px;
    }
  }

  @media screen and (max-width: 970px) {
    section {
      flex-direction: column;
      align-items: flex-start;
      margin: 30px;
    }

    .profile {
      width: 350px;
      height: 350px;
    }

    aside {
      height: auto;
      margin-top: 20px;
      margin-left: 0px;
    }
  }

  @media screen and (max-width: 550px) {
    .profile {
      width: auto;
      height: auto;
    }

    h1 {
      font-size: 35px;
      line-height: 30px;
    }

    h4 {
      font-size: 20px;
    }
  }
</style>
