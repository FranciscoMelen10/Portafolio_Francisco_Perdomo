---
import { ViewTransitions } from "astro:transitions";

import Footer from "../components/footer.astro";
import Header from "../components/header.astro";

interface Props {
  name: string;
  seccion: number;
  marg: boolean;
}

const { name, seccion, marg } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300&family=Koulen&family=Krona+One&display=swap"
      rel="stylesheet"
    />


    <!-- Swiper -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css"
    />

    <link rel="icon" type="image/svg+xml" href="/Proyecto/Logo.ico" />

    <script async src="https://www.googletagmanager.com/gtag/js?id=G-TRDWVCDCYD"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-TRDWVCDCYD');
    </script>

    <title>{name}</title>
  </head>
  <body>
    <div class="header_principal">
      <Header seleccion={seccion} astro:page-load/>
    </div>
    <main style=`margin-bottom:${marg ? "10vh" : "0"}`>
      <slot />
    </main>
    <Footer />
  </body>
  <script
    src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-element-bundle.min.js"
  ></script>
  <ViewTransitions/>


  <style is:global>
    * {
      padding: 0%;
      margin: 0%;
      box-sizing: border-box;
    }

    body,
    html {
      width: 100%;
      height: 100%;
    }

    main {
      background-color: #ffffff;
    }

    .general {
      height: 100%;
      width: 100%;
      display: flex;
      align-items: center;
      flex-direction: column;
      padding: 50px 80px 0 80px;
    }

    .contenedor_principal {
      height: 100px;
      width: 100vh;
    }

    .header_principal {
      display: flex;
      align-items: center;
      justify-content: center;
      background-color: #24437a;
      height: 100px;
      width: 100%;
      padding: 50px;
    }
  </style>
</html>
